# Initialise DOTFILES
[[ -f $HOME/.dot ]] && source $HOME/.dot

echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc >> $HOME/.dot_log

# Runs second (after .zprofile) for each shell created in the gnome-session

# Antigen
if [ -f $DOTFILES/externals/antigen/antigen.zsh ]; then
	echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc load-antigen >> $HOME/.dot_log
	source "$DOTFILES/externals/antigen/antigen.zsh"

	# PREZTO
	# # Try out prezto instead of oh-my-zsh
	# _zdotdir_set=${+parameters[ZDOTDIR]}
	# if (( _zdotdir_set  )); then
	# 	_old_zdotdir=$ZDOTDIR
	# fi
	#
	# echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc use-prezto >> $HOME/.dot_log
	# antigen use prezto
	# echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc bundle-helper >> $HOME/.dot_log
	# antigen bundle sorin-ionescu/prezto modules/helper  # required for Git module
	# echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc bundle-editor >> $HOME/.dot_log
	# antigen bundle sorin-ionescu/prezto modules/editor
	# echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc bundle-git >> $HOME/.dot_log
	# antigen bundle sorin-ionescu/prezto modules/git
	# echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc bundle-prompt >> $HOME/.dot_log
	# antigen bundle sorin-ionescu/prezto modules/prompt
	#
	# if (( _zdotdir_set  )); then
	# 	ZDOTDIR=$_old_zdotdir
	# else
	# 	unset ZDOTDIR
	# 	unset _old_zdotdir
	# fi;
	# unset _zdotdir_set

	# OH-MY-ZSH
	echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc oh-my-zsh >> $HOME/.dot_log
	antigen use oh-my-zsh

	echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc bundle-git >> $HOME/.dot_log
	antigen bundle git

	# Used by some prompts :(
	# antigen bundle virtualenv

	# antigen bundle svn
	# antigen bundle mvn

	# antigen bundle arialdomartini/oh-my-git
	# antigen bundle seletskiy/zsh-context-aliases

	echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc bundle-zsh-syntax-highlighting >> $HOME/.dot_log
	case $TERM in
		xterm*|screen*)
			antigen bundle zsh-users/zsh-syntax-highlighting
			;;
		vt100)
			;;
		*)
			antigen bundle zsh-users/zsh-syntax-highlighting
			;;
	esac

	# History automatic searching
	echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc bundle-zsh-history-substring-search >> $HOME/.dot_log
	antigen bundle zsh-users/zsh-history-substring-search

	# Extra completions
	echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc bundle-zsh-completions >> $HOME/.dot_log
	antigen bundle zsh-users/zsh-completions

	# Liquidprompt
	# Add prefix to set window title
	echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc bundle-liquidprompt >> $HOME/.dot_log
	antigen bundle nojhan/liquidprompt

	# Ruby
	# antigen bundle ruby
	# antigen bundle rvm

	# Command Architect - Ctrl-T (TODO currently keybind from fzf overrides this)
	echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc bundle-zsh-cmd-architect >> $HOME/.dot_log
	antigen bundle psprint/zsh-cmd-architect

	# Autoenv - per directory rc
	antigen bundle horosgrisa/autoenv

	# APPLY ANTIGEN CHANGES
	echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc antigen-apply >> $HOME/.dot_log
	antigen apply

	# Prompt stuff, after apply
	prompt_tag
	LP_ENABLE_TITLE=0
	LP_ENABLE_SVN=0
fi

echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc post-antigen >> $HOME/.dot_log

# oh-my-zsh clobbers LESS :(
export LESS="-F -X -R"

# History substring search
zmodload zsh/terminfo
bindkey "$terminfo[kcuu1]" history-substring-search-up
bindkey "$terminfo[kcud1]" history-substring-search-down

# Load common functions
if [[ -d $DOTFILES/common/functions ]]
then
	fpath+=( $DOTFILES/common/functions )
	for f in $DOTFILES/common/functions/*
	do
		[[ -f $f ]] && autoload $(basename $f)
	done
fi

# Load zsh specific functions
if [[ -d $DOTFILES/zsh/functions ]]
then
	fpath+=( $DOTFILES/zsh/functions )
	for f in $DOTFILES/zsh/functions/*
	do
		[[ -f $f ]] && autoload $(basename $f)
	done
fi

echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc post-functions >> $HOME/.dot_log

# turn of nomatch so that stuff like -? and ^. works
setopt nonomatch

# Use dig script to get hosts for completion
if [[ -x $DOTFILES/common/scripts/get-hosts ]]
then
	zstyle -e ':completion:*' hosts 'reply=($($DOTFILES/common/scripts/get-hosts))'
fi

echo $HOSTNAME $(date +"%Y-%m-%d %H:%M:%S") $$ $PPID zsh/zsh_rc post-hosts >> $HOME/.dot_log

# Extra processing when inside emacs
if [[ -n "$INSIDE_EMACS" ]]
then
	chpwd() { print -P "\033AnSiTc %d" }
	print -P "\033AnSiTu %n"
	print -P "\033AnSiTc %d"
fi

# History
# Append, but don't update in real time, only on exit.
# This overrides the oh-my-zsh default which results in live sharing of
# history across shells. Nasty.
unsetopt share_history
unsetopt inc_append_history
setopt   append_history

# FZF
[[ -f ~/.fzf.zsh ]] && source ~/.fzf.zsh

# Setup the neovim_autocd, so that terminal window follows shell's directory
chpwd_functions+=( neovim_autocd )

# Load aliases
[[ -f ~/.zsh_alias ]] && . ~/.zsh_alias

# Check if we're starting in a branch directory...
if [[ $PWD =~ /*\/work\/PostgreSQL\/*/ ]]
then
	branch=${${PWD#~/work/PostgreSQL/}%%/*}
	if [[ -n $branch && $branch != "master" ]]
	then
		switch-pg $branch
	fi
	unset branch
fi
